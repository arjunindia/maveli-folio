---
interface Props {
  title: string;
  date?: string;
  body: string;
}

const { title, date, body } = Astro.props;
---

<div>
  <h3>{title}</h3>
  <time datetime={date} title={date}>{date}</time>
  <p>{body}</p>
</div>

<style>
  div {
    color: #ddd;
    padding: 1rem;
    border-radius: 0.5rem;
    background-color: #ffffff00;
    transition: all 0.2s ease-in-out;
  }
  div:hover {
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.726);
    background-color: #ccc;
    color: #000;
  }

  h3 {
    margin-bottom: 0.5rem;
  }

  time {
    font-size: 0.8rem;
    color: #aaa;
  }
  div:hover time {
    color: #000;
  }

  p {
    margin-top: 0.5rem;
    line-height: 1.5;
    max-width: 50rem;
  }
</style>
