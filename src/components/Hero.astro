---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---

<section class={className} id="hero">
  <h1>ഞാൻ Maveli.</h1>
  <img src={Astro.url + "/pookalam.png"} alt="Maveli" />
</section>
<style>
  section {
    margin: 0 1rem;
    padding: 5rem;
    background: linear-gradient(20deg, #ffd54cda 0%, #ff754eaa 100%) no-repeat;
    background-size: 200% 500%;
    background-position: 100% 100%;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.1);
    min-height: calc(100vh - 17rem);
    border-radius: 0.5rem;
    display: flex;
    /* align-items: center; */
    /* justify-content: center; */
    animation: gradient 5s ease infinite;
    position: relative;
    overflow: hidden;
    z-index: 0;
  }
  h1 {
    font-size: 8rem;
    font-weight: 700;
    width: fit-content;
    max-width: 6ch;
    line-height: 1.2;
    padding: 0;
    margin: 0;
    background: linear-gradient(50deg, #111111, #2e2e2e);
    background-size: 100% 100%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  img {
    position: absolute;
    width: 100%;
    max-width: 60vw;
    margin-left: auto;
    margin-right: 0;
    margin-top: auto;
    margin-bottom: auto;
    right: -20%;
    bottom: 50%;
    transform: translateY(50%);
    filter: hue-rotate(20deg) saturate(0.5) brightness(1.2)
      drop-shadow(0 0 0.5rem rgba(0, 0, 0, 0.2));
    animation: rotate 420s ease infinite;
    z-index: -1;
  }

  @media (max-width: 768px) {
    section {
      padding: 2rem;
      min-height: calc(80vh - 4rem);
    }
    h1 {
      font-size: 4rem;
    }
    img {
      max-width: 500px;
      right: 0;
      bottom: 30%;
      margin-top: 0;
      margin-bottom: 0;
    }
  }

  @keyframes gradient {
    0% {
      background-position-y: 100%;
    }
    50% {
      background-position-y: 0%;
    }
    100% {
      background-position-y: 100%;
    }
  }
  @keyframes rotate {
    0% {
      transform: translateY(50%) rotate(0deg);
    }
    50% {
      transform: translateY(50%) rotate(360deg);
    }
    100% {
      transform: translateY(50%) rotate(0deg);
    }
  }
</style>
