---
interface Props {
  class?: string;
  id?: string;
  title?: string;
}
const { class: className, id: idName, title } = Astro.props;
---

<section class={className} id={idName}><h2>{title}</h2><slot /></section>
<style>
  section {
    margin: 1rem;
    padding: 1rem 4rem;
    background: linear-gradient(180deg, #333333aa 0%, #272727aa 100%) no-repeat;
    background-size: 100% 100%;
    background-attachment: fixed;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.1);
    min-height: calc(100vh - 4rem);
    border-radius: 0.5rem;
  }
  h2 {
    font-size: 4rem;
    color: #eee;
  }
  @media (max-width: 768px) {
    section {
      margin: 0.5rem;
      padding: 0.5rem 2rem;
      min-height: calc(100vh - 1rem);
    }
    h2 {
      font-size: 2rem;
    }
  }
</style>
